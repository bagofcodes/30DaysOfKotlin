<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/result"
            android:layout_width="264dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberSigned|number|numberDecimal"
            android:minWidth="60dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/newnumber"
            android:layout_width="264dp"
            android:layout_height="47dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberSigned|numberDecimal"
            app:layout_constraintBaseline_toBaselineOf="@+id/result"
            app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <TextView
            android:id="@+id/operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            app:layout_constraintEnd_toStartOf="@+id/button7"
            app:layout_constraintStart_toStartOf="@+id/newnumber"
            tools:text="dddd" />

    <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="7"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/button8" />

    <Button
            android:id="@+id/buttondecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="."
            app:layout_constraintEnd_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="0"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttondecimal"
            app:layout_constraintEnd_toStartOf="@+id/buttondecimal" />

    <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="2"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="5"
            app:layout_constraintEnd_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="1"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/button2" />

    <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5"
            app:layout_constraintEnd_toStartOf="@+id/button5" />

    <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="8"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="9"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
            android:id="@+id/buttonminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="-"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button3" />

    <Button
            android:id="@+id/buttonplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="+"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonequals"
            app:layout_constraintStart_toEndOf="@+id/buttonequals" />

    <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="6"
            app:layout_constraintStart_toStartOf="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
            android:id="@+id/buttonmultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="*"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minWidth="60dp"
            android:text="3"
            app:layout_constraintStart_toStartOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
            android:id="@+id/buttonequals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="="
            app:layout_constraintStart_toStartOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
            android:id="@+id/buttondivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:text="/"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <Button
            android:id="@+id/buttonNeg"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:maxWidth="48dp"
            android:minWidth="60dp"
            android:minHeight="48dip"
            android:text="Neg"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttondivide"
            app:layout_constraintStart_toEndOf="@+id/buttondivide" />
</androidx.constraintlayout.widget.ConstraintLayout>